
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HomePage</h2>
<style>

    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>



<fieldset>
    <legend>
        Select Option:
    </legend>
    <div class=" container ">
        <div class=" row">
            <div class="col-md-4 btn btn-group-sm">
               <input type="button" class=" btn btn-info" value="STAFF LOGIN" onclick="location.href='@Url.Action("StaffLogin", "Main")'" />    
            </div>
            <div class="col-md-4">
                <input type="button" class=" btn btn-info" value="COMPANY LOGIN" onclick="location.href='@Url.Action("CompanyLogin", "Main")'" />
            </div>
            <div class="col-md-4">
                <input type="button" class=" btn btn-info" value="PAYMENT PORTAL" onclick="location.href='@Url.Action("Index", "Home")'" />
            </div>
        </div>
    </div>
</fieldset>


