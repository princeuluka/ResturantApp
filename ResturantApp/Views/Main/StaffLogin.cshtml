@model ResturantApp.Models.Staff

@{
    ViewBag.Title = "StaffLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>


@using (Html.BeginForm("StaffLogin", "Main", FormMethod.Post))

{
    <fieldset>
        <legend>Client Login</legend>
        <div class="row">
            <div class="col-md-8">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @if (@ViewBag.Message != null)
                {
                    <div style="border: 1px solid red">
                        @ViewBag.Message
                    </div>
                }
                <div class=" center">
                    <div class="form-group ">
                        @Html.LabelFor(m => m.PaymentCode, new { @class = "col-md-2 control-label", style = "margin-top:10px" })
                        <div class="col-md-10 ">
                            @Html.TextBoxFor(m => m.PaymentCode, new { @class = "form-control", style = "margin-top:10px" })
                            @Html.ValidationMessageFor(m => m.PaymentCode, "", new { @class = "text-danger", })
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", style = "margin-top:10px" })
                        <div class="col-md-10 ">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "margin-top:10px" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-success" style="margin-top:10px" /> @*Not Registered?
                            @Html.ActionLink("Register New User", "Create", "Main")*@
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </fieldset>

}